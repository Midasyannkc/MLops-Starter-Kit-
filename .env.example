# Database
POSTGRES_USER=mlops
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=mlops

# Object Storage (choose one)
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
S3_BUCKET=mlops-artifacts

AZURE_STORAGE_ACCOUNT=your_account
AZURE_STORAGE_KEY=your_key
AZURE_CONTAINER=mlops-artifacts

GCS_BUCKET=mlops-artifacts
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://mlops:password@postgres:5432/mlops

# Monitoring
EVIDENTLY_ALERT_THRESHOLD=0.05
DRIFT_DETECTION_ENABLED=true
